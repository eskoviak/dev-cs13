<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Account_BPC_InvoicePymtPortal_Required</fullName>
    <active>false</active>
    <description>Account Invoice Payment Portal is required. It cannot be empty. No is the default.</description>
    <errorConditionFormula>NOT(ISPICKVAL(Invoice_Payment_Portal__c  , &apos;Yes&apos;)||
   (ISPICKVAL(Invoice_Payment_Portal__c  , &apos;No&apos;)))</errorConditionFormula>
    <errorDisplayField>Invoice_Payment_Portal__c</errorDisplayField>
    <errorMessage>You cannot have an empty value for Invoice Payment Portal</errorMessage>
</ValidationRule>
