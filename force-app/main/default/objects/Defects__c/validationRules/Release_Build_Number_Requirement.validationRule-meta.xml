<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Release_Build_Number_Requirement</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(Reason__c , &quot;Fixed&quot;),  ISBLANK( Release_Build_Fixed__c ))</errorConditionFormula>
    <errorDisplayField>Release_Build_Fixed__c</errorDisplayField>
    <errorMessage>Please enter an appropriate build or release number for the fix.</errorMessage>
</ValidationRule>
