<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Due_Date_is_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND(  NOT(ISPICKVAL( Status__c , &quot;1 - Open/New&quot;)) ,  ISBLANK(Due_Date__c) )</errorConditionFormula>
    <errorDisplayField>Due_Date__c</errorDisplayField>
    <errorMessage>Please Enter a valid Due Date</errorMessage>
</ValidationRule>
