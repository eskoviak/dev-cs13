<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Case_Age_in_Days__c</fullName>
    <description>Case Age in Days</description>
    <externalId>false</externalId>
    <formula>IF(
NOT(ISPICKVAL(Status, &quot;Closed&quot;)),  
NOW() - CreatedDate,
ClosedDate - CreatedDate)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <inlineHelpText>This is that number of days the case has been Open.</inlineHelpText>
    <label>Case Age in Days</label>
    <precision>18</precision>
    <required>false</required>
    <scale>0</scale>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Number</type>
    <unique>false</unique>
</CustomField>
